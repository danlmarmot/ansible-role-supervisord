[Unit]
Description=supervisord
After=network.target

[Service]
ExecStart=/usr/local/bin/supervisord --nodaemon --configuration /etc/supervisord.conf
ExecReload=/usr/local/bin/supervisorctl --configuration /etc/supervisord.conf $OPTIONS reload
ExecStop=/usr/local/bin/supervisorctl $OPTIONS shutdown
KillMode=process
Restart=on-failure
RestartSec=50s

[Install]
WantedBy=multi-user.target